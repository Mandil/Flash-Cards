<h3>Register</h3>

<%= form_for :user, :html =>  {class: 'form-inline'}, url: '/users' do |f| %>
  <p>
    <div class="form-group">
      <%= f.email_field :name, type: "text", class: "form-control", id: "exampleInputEmail1", placeholder: "name"%>
    </div>
  </p>

  <p>
    <div class="form-group">
      <%= f.email_field :email, type: "email", class: "form-control", id: "exampleInputEmail1", placeholder: "email"%>
    </div>
  </p>
  <p>
    <div class="form-group">
      <%= f.password_field :password, type: "password", class: "form-control", id: "exampleInputEmail1", placeholder: "password"%>
    </div>
  </p>

  <p>
    <div class="form-group">
      <%= f.password_field :password_confirmation, type: "password", class: "form-control", id: "exampleInputEmail1", placeholder: "password confirmation"%>
    </div>
  </p>

  <p>
    <%= f.submit 'sign up', :class => 'btn btn-primary', :name => 'sign up'%>
  </p>
<% end %>
